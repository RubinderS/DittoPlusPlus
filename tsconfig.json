{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@main": ["src/main"],
      "@main/*": ["src/main/*"],
      "@renderer": ["src/renderer"],
      "@plugins": ["src/renderer/plugins"],
      "@plugins/*": ["src/renderer/plugins/*"],
      "@engine": ["src/renderer/engine"],
      "@engine/*": ["src/renderer/engine/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@type": ["src/type"],
      "@type/*": ["src/type/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"]
}
