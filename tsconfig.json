{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@main": ["src/main"],
      "@models": ["src/models"],
      "@renderer": ["src/renderer"],
      "@utils": ["src/utils"],
      "@plugins": ["src/renderer/plugins"],
      "@pluginBase": ["src/renderer/pluginBase"],
      "@ui": ["src/renderer/ui"],
      "@types": ["src/types.ts"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"]
}
